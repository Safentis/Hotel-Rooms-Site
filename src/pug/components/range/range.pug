mixin range(mrg = '', label)
    div(class=`range ${mrg}`) 
        p(class="range__cost") #{label}
        p(class="range__value")
            span(class="range__min", data-cost="min", id="min") 5 000₽ 
            span -
            span(class="range__max", data-cost="max", id="max") 10 000₽
    div(class="slider")
        div(class="slider__button", data-btn="button1", id="button1")
        div(class="slider__between")
        div(class="slider__button", data-btn="button2", id="button2")